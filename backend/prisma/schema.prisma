generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

//
// ───────────────────────────────────────────────
// CLIENT
// ───────────────────────────────────────────────
//

model Client {
  id         Int       @id @default(autoincrement())
  name       String
  email      String    @unique
  goal       String?
  joinedAt   DateTime  @default(now())
  bookings   Booking[]
}


//
// ───────────────────────────────────────────────
// EXERCISE TEMPLATE (Global Exercise Library)
// ───────────────────────────────────────────────
//

model ExerciseTemplate {
  id              Int                     @id @default(autoincrement())
  name            String
  category        String?
  primaryMuscle   String?
  secondaryMuscle String?
  equipment       String?
  videoURL        String?
  description     String?
  sessions        TrainingSessionExercise[]
}

//
// ───────────────────────────────────────────────
// BOOKING (A scheduled appointment with a trainer)
// ───────────────────────────────────────────────
//

model Booking {
  id          Int              @id @default(autoincrement())
  clientId    Int
  client      Client           @relation(fields: [clientId], references: [id])
  date        DateTime
  status      String           @default("scheduled") // e.g., scheduled, completed, cancelled
  session     TrainingSession?
}

//
// ───────────────────────────────────────────────
// TRAINING SESSION (The actual workout plan)
// ───────────────────────────────────────────────
//

model TrainingSession {
  id          Int                       @id @default(autoincrement())
  bookingId   Int                       @unique
  booking     Booking                   @relation(fields: [bookingId], references: [id])
  title       String
  notes       String?
  exercises   TrainingSessionExercise[]
}

//
// ───────────────────────────────────────────────
// TRAINING SESSION EXERCISE (pivot table)
// ───────────────────────────────────────────────
//

model TrainingSessionExercise {
  id            Int               @id @default(autoincrement())
  sessionId     Int
  templateId    Int

  sets          Int
  reps          String
  rest          String?

  session       TrainingSession   @relation(fields: [sessionId], references: [id])
  template      ExerciseTemplate  @relation(fields: [templateId], references: [id])
}
